extends layout

block content
    .w3-card-4
        header.w3-container(style="background-color:#000000")
            h1(style="color:white") Person Record: #{p.id}
        
    .w3-container
        header.w3-container.w3-red
            h3 Crucial Info
        img.w3-left.w3-circle(src="/images/person.png" alt="Avatar" width="80")
        ul.w3-ul.w3-card-4
            li #[b ID:] #{p.id}
            li #[b Name:] #{p.nome}
            li #[b BI:] #{p.BI}
            li #[b Age:] #{p.idade}
            if p.sexo === 'feminino'
                li #[b Gender:] Feminino
            else if p.sexo === 'masculino'
                li #[b Gender:] Masculino
            else if p.sexo === 'outro'
                li #[b Gender:] Outro

    
    .w3-container
        header.w3-container.w3-red
            h3 Extra Info
        ul.w3-ul.w3-card-4
            li #[b Description:] #{p.descrição}
            li #[b Religion:] #{p.religiao}
            li #[b Occupation:] #{p.profissao}
            li #[b Political Party:] #{p.partido_politico.party_abbr} - #{p.partido_politico.party_name}
            li 
                header.w3-container.w3-red
                    h6(style="color:black") Address
                ul.w3-ul.w3-card-4
                    li #[b District:] #{p.morada.distrito}
                    li #[b City:] #{p.morada.cidade}
            li 
                header.w3-container.w3-red
                    h6(style="color:black") Sports
                ul.w3-ul.w3-card-4
                    each sport in p.desportos
                        li= sport
            li 
                header.w3-container.w3-red
                    h6(style="color:black") Animals
                ul.w3-ul.w3-card-4
                    each animal in p.animais
                        li= animal
            li 
                header.w3-container.w3-red
                    h6(style="color:black") Public Figures PT
                ul.w3-ul.w3-card-4
                    each pf in p.figura_publica_pt
                        li= pf
            li 
                header.w3-container.w3-red
                    h6(style="color:black") Favourite Destinations
                ul.w3-ul.w3-card-4
                    each fd in p.destinos_favoritos
                        li= fd
            li #[b Car Brand:] #{p.marca_carro}
            li #[b Favourite Food:] #{p.atributos.comida_favorita}
            
            if p.atributos.fumador
                li #[b Smoker:] Yes
            else
                li #[b Smoker:] No
            if p.atributos.acorda_cedo
                li #[b Wakes Up Early:] Yes
            else
                li #[b Wakes Up Early:] No
            if p.atributos.gosta_cinema
                li #[b Likes Cinema:] Yes
            else
                li #[b Likes Cinema:] No
            if p.atributos.gosta_viajar
                li #[b Likes to Travel:] Yes
            else
                li #[b Likes to Travel:] No
            if p.atributos.gosta_ler
                li #[b Likes to Read:] Yes
            else
                li #[b Likes to Read:] No
            if p.atributos.gosta_musica
                li #[b Likes Music:] Yes
            else
                li #[b Likes Music:] No
            if p.atributos.gosta_comer
                li #[b Likes to Eat:] Yes
            else
                li #[b Likes to Eat:] No
            if p.atributos.gosta_animais_estimacao
                li #[b Likes Pets:] Yes
            else
                li #[b Likes Pets:] No
            if p.atributos.gosta_dancar
                li #[b Likes to Dance:] Yes
            else
                li #[b Likes to Dance:] No

    footer.w3-container(style="background-color:#000000")
        h5(style="color:white") Generated by RPCW2023 in #{date} - #[a(href="/") Return]