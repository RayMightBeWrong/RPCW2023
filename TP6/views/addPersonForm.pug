extends layout 

block content 
    .w3-card-4
        header.w3-container(style="background-color:#000000")
            h2(style="color:white") Student Form
        form.w3-container(method="POST")
            fieldset
                legend ID (obligatory)
                input.w3-input.w3-round(type="text" name="id" required)
            fieldset
                legend Name (obligatory)
                input.w3-input.w3-round(type="text" name="nome" required)
            fieldset
                legend BI
                input.w3-input.w3-round(type="text" name="BI")
            fieldset
                legend Age
                input.w3-input.w3-round(type="number" name="idade")
            fieldset
                legend Gender
                select(name="sexo")
                    option 
                    option masculino
                    option feminino
                    option outro
            fieldset
                legend Description
                textarea.w3-input.w3-round(type="text" name="descricao")
            fieldset
                legend Address
                label District
                input.w3-input.w3-round(type="text" name="distrito")
                label City
                input.w3-input.w3-round(type="text" name="cidade")
            fieldset
                legend Political Party
                label Abbreviation
                input.w3-input.w3-round(type="text" name="partido_abbr")
                label Name
                input.w3-input.w3-round(type="text" name="partido_nome")
            fieldset
                legend Religion
                input.w3-input.w3-round(type="text" name="religiao")
            fieldset
                legend Occupation
                input.w3-input.w3-round(type="text" name="profissao")
            fieldset
                legend Favourite Car Brand
                input.w3-input.w3-round(type="text" name="marca_carro")
            fieldset
                legend Favourite Food
                input.w3-input.w3-round(type="text" name="comida_favorita")
            fieldset 
                legend Sports
                button(onClick="add('desporto', 'Sport', false)" type="button") + 
                button(onClick="del('desporto')" type="button") X
                .w3-container(id='desportos')
                script(src="/javascripts/script.js")
            fieldset 
                legend Animals
                button(onClick="add('animal', 'Animal', false)" type="button") + 
                button(onClick="del('animal')" type="button") X
                .w3-container(id='animals')
                script(src="/javascripts/script.js")
            fieldset 
                legend Public Figures PT
                button(onClick="add('pf', 'Public Figure', false)" type="button") + 
                button(onClick="del('pf')" type="button") X
                .w3-container(id='pfs')
                script(src="/javascripts/script.js")
            fieldset 
                legend Favourite Destinations
                button(onClick="add('fd', 'Favourite Destination', false)" type="button") + 
                button(onClick="del('fd')" type="button") X
                .w3-container(id='fds')
                script(src="/javascripts/script.js")
        
            fieldset
                legend Extra Info
                each val in [['fumador', 'Smoker'], ['gosta_cinema', 'Likes Cinema'], ['gosta_viajar', 'Likes to Travel'], ['acorda_cedo', 'Wakes Up Early'], ['gosta_ler', 'Likes to Read'], ['gosta_musica', 'Likes Music'], ['gosta_comer', 'Likes to Eat'], ['gosta_animais_estimacao', 'Likes Pets'], ['gosta_dancar', 'Likes to Dance']]
                    input.w3-check(type="checkbox" name=val[0] value="true")
                    label= val[1]
                    br

            center
                button.w3-btn.w3-green.w3-mb-2(type="submit") Add
               
        footer.w3-container(style="background-color:#000000")
            h5(style="color:white") Generated by EngWeb2023 in #{date} - [#[a(href="/") Return]]