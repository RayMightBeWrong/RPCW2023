extends layout

block content
    .w3-card-4
        header.w3-container(style="background-color:#000000")
            h1(style="color:white") Students List #[a.w3-btn.w3-round.w3-grey(href="/people/register") + ]

        .w3-container
            table.w3-table-all
                tr
                    th ID
                    th Name
                    th BI
                    th Age
                    th Gender
                    th Actions

                each p in list
                    tr
                        td= p.id
                        td #[a(href="/people/" + p.id)= p.nome]
                        td= p.BI
                        td= p.idade
                        td= p.sexo
                        td
                            button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                                a(style='text-decoration:none' href="/alunos/edit/" + p.id) Edit
                            button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                                a(style='text-decoration:none' href="/alunos/delete/" + p.id) Delete
              
        footer.w3-container(style="background-color:#000000")
            h5(style="color:white") Generated by RPCW2023 in #{date}
