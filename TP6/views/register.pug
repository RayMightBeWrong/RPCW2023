extends layout 
block content 
    .w3-card-4
        header.w3-container.w3-teal
            h2 Student Form
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id")
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Git
                input.w3-input.w3-round(type="text" name="gitlink")
                
            fieldset
                legend TPC
                each i in [1,2,3,4,5,6,7,8]
                    input.w3-check(type="checkbox" name="tpc"+i value="1")
                    label TPC#{i}
                        
            center     
                button.w3-btn.w3-teal.w3-mb-2(type="submit") Add
               
        footer.w3-container.w3-teal
            h5 Generated by EngWeb2023 in #{date} - [#[a(href="/") Return]]