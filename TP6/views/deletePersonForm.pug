extends layout

block content
  .w3-card-4
    header.w3-container(style="background-color:#000000")
        h1(style="color:white") Person Record Delete: #{p.id}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/person.png" alt="Avatar" width="80")
        ul.w3-ul.w3-card-4
            li #[b ID:] #{p.id}
            li #[b Name:] #{p.nome}
            li #[b BI:] #{p.BI}
            li #[b Age:] #{p.idade}
            if p.sexo === 'feminino'
                li #[b Gender:] Feminino
            else if p.sexo === 'masculino'
                li #[b Gender:] Masculino
            else if p.sexo === 'outro'
                li #[b Gender:] Outro

        button.w3-btn.w3-round.w3-margin.w3-green
            a(href="/people/delete/" + p.id + "/confirm") Confirm 
        button.w3-btn.w3-round.w3-margin.w3-red
            a(href="/") Cancel
    
    footer.w3-container(style="background-color:#000000")
        h5(style="color:white") Generated by RPCW2023 in #{date} - #[a(href="/") Return]